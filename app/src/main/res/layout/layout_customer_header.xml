            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:contentDescription="icon"
            android:src="@drawable/ic_pencil_48"
            />
-->
        <com.feerlaroc.widgets.ReactiveCircleImageView
            android:id="@+id/circle_image_customer"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_account_black_48dp"
            android:layout_marginStart="@dimen/activity_vertical_margin_8dp"
            android:layout_centerHorizontal="true"
            app:civ_border_color="@color/color_divider"
            app:civ_border_width="1dp"
            />

        <com.feerlaroc.widgets.ReactiveTextView
            android:id="@+id/text_customer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_padding_4dp"
            android:textAlignment="center"
            android:layout_below="@+id/circle_image_customer"
            android:text="@string/customer_name_holder"
            android:textSize="@dimen/text_title"/>
    </RelativeLayout>

</com.feerlaroc.mqasho.schema.tenant.view.CustomerHeaderView>